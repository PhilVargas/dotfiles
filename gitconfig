[color]
  ui            = true
[core]
  editor        = vim
  excludesfile  = ~/.gitignore_global
[interactive]
  singlekey     = true
[log]
  date          = short
[push]
  default       = simple
[pull]
  rebase        = true
[merge]
  conflictstyle = diff3
  ff            = only
  prompt        = false
  tool          = vimdiff
[mergetool]
  keepBackup    = false
[diff]
  renames  = true
  tool     = vimdiff
[alias]
  a        = add
  ap       = add --patch
  ca       = commit --amend
  cm       = commit -m
  co       = checkout
  cv       = commit -v
  l        = log --graph --pretty=format:'%Cred%h%Creset - %C(yellow)%d%Cgreen(%ad) %C(blue)<%an>%Creset %s' --abbrev-commit --date=short
  ls       = status
  mt       = mergetool
  qa       = !sh -c 'git fetch origin $1:$1 && git checkout $1' -
  r        = rebase
  ra       = rebase --abort
  rc       = rebase --continue

[include]
  path     = ~/.gitconfig.secret
