[color]
  ui       = true
[core]
  editor   = vim
  excludesfile = ~/.gitignore_global
[interactive]
  singlekey = true
[push]
  default  = simple
[pull]
  rebase   = true
[merge]
  conflictstyle = diff3
  ff            = only
  prompt        = false
  tool          = vimdiff
[mergetool]
  keepBackup    = false
[diff]
  renames  = true
  tool     = vimdiff
[alias]
  a        = add
  ap       = add --patch
  ca       = commit --amend
  cm       = commit -m
  co       = checkout
  cv       = commit -v

  # pretty print git log. pring with graph, short commit hash in the following format:
  # red commit hash, yellow branch name, green date, blue committer, git message
  l        = log --graph --pretty=format:'%Cred%h%Creset - %C(yellow)%d%Cgreen(%ad) %C(blue)<%an>%Creset %s' --abbrev-commit --date=short
  ls       = status
  qa       = !sh -c 'git fetch origin $1:$1 && git checkout $1' -

[include]
  path     = ~/.gitconfig.secret
