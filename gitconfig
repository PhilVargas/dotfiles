[include]
  path     = ~/.gitconfig.secret
[color]
  ui       = true
[core]
  excludesfile = ~/.gitignore_global
  editor   = vim
[interactive]
  singlekey = true
[push]
  default  = simple
[pull]
  rebase   = true
[merge]
  conflictstyle = diff3
  ff            = only
  prompt        = false
  tool          = vimdiff
[mergetool]
  keepBackup    = false
[diff]
  renames  = true
  tool     = vimdiff
[alias]
  ls       = status
  ap       = add --patch
  cm       = !sh -c 'git commit -m \"$*\"' -
  co       = checkout
  qa       = !sh -c 'git fetch origin $1:$1 && git checkout $1' -

  # LFFS aliases
  qaf      = !sh -c 'git fetch origin feature/TRAV-$1:feature/TRAV-$1 && git checkout feature/TRAV-$1' -
  nf       = !sh -c 'git checkout -b feature/TRAV-$1' - 
  nb       = !sh -c 'git checkout -b bugfix/TRAV-$1' -
  cob      = !sh -c 'git checkout bugfix/TRAV-$1' - 
  cof      = !sh -c 'git checkout feature/TRAV-$1' -
